{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch Extension",
      "request": "launch",
      "type": "extensionHost",
      "args": [
        "--disable-extensions",
        "--extensionDevelopmentPath=${workspaceFolder}/out/bun",
        "${workspaceFolder}/private/test_project"
      ],
      "preLaunchTask": "bun: build"
    },
    {
      "name": "Extension Tests",
      "request": "launch",
      "type": "extensionHost",
      "args": [
        "--disable-extensions",
        "--extensionDevelopmentPath=${workspaceFolder}/out/bun",
        "--extensionTestsPath=${workspaceFolder}/out/test/*.test.cjs",
        "${workspaceFolder}/private/test_project"
      ],
      "preLaunchTask": "bun: build_test"
    }
  ]
}
